<%- include('partials/header') %>


  <div class="game-board">

    <li>
    </li>
    <h1 class="score">Votre score est de <%=score%>/10</h1>
    <table class="result">
      <thead>
        <tr>
          <th>Pays</th>
          <th>Capitale</th>
          <th>Votre r√©ponse</th>
        </tr>
      </thead>
      <tbody>
        <% gameArray.forEach(elem => { %>
          <% if (elem.test) { %>
            <tr class="true">
              <td><%=elem.name%></td>
              <td><%=elem.capital%></td>
              <td><%=elem.user%></td>
            </tr>
            <% } else {%>
              <tr class="false">
                <td><%=elem.name%></td>
                <td><%=elem.capital%></td>
                <td><%=elem.user%></td>
              </tr>
              <%}%>
              <% }) %> 
            </tbody>
          </table>
          <div class="addLeaderBoard">
            <a href="/game/addNameForm" class="link-menu">Ajoutez votre nom au Leaderboard</a>
            <a href="/" class="link-menu">Rejouer</a>
          </div>


  </div>

