<%- include('partials/header') %>


  <div class="game-board">

    <li>
    </li>
    
    <table class="result">
      <thead>
        <tr>
          <th class="score" colspan="3">Votre score est de <%=score%>/10</th>
        </tr>
      </thead>
      <tbody>
        <% gameArray.forEach(elem => { %>
          <% if (elem.test) { %>
            <tr class="true">
              <td><%=elem.name%></td>
              <td><%=elem.capital%></td>
              <td><%=elem.user%></td>
            </tr>
            <% } else {%>
              <tr class="false">
                <td><%=elem.name%></td>
                <td><%=elem.capital%></td>
                <td><%=elem.user%></td>
              </tr>
              <%}%>
              <% }) %> 
            </tbody>
          </table>
          
          <a href="/game/addNameForm" class="link-menu">Ajoutez votre nom au Leaderboard</a>
          <a href="/" class="link-menu">Rejouer</a>


  </div>

<%- include('partials/footer') %>